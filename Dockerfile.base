# Runtime base image with Node.js and Claude CLI.
# Build once, then use as the base for Dockerfile:
#   docker build -f Dockerfile.base -t llm-bridge-base:latest .
FROM alpine:3.19

RUN apk add --no-cache \
    ca-certificates \
    nodejs \
    npm \
    bash \
    git \
    tmux

# llm-bridge spawns the Claude CLI as a child process at runtime.
RUN npm install -g @anthropic-ai/claude-code

RUN mkdir -p /etc/llm-bridge
